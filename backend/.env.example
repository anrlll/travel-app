# データベース
# Docker使用時（推奨）
DATABASE_URL="postgresql://travelapp:travelapp_dev_password@localhost:5435/travelapp?schema=public"
# VPS/本番環境用（実際の値に置き換えてください）
# DATABASE_URL="postgresql://username:password@your-vps-ip:5432/travelapp?schema=public"

# JWT
JWT_SECRET="your-secret-key-here-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-here-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# サーバー
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# 外部API
OPENWEATHER_API_KEY="your-openweather-api-key"
OPENTRIPMAP_API_KEY="your-opentripmap-api-key"
FOURSQUARE_API_KEY="your-foursquare-api-key"
RESEND_API_KEY="your-resend-api-key"

# Cloudflare R2 (Phase 2+)
# R2_ACCOUNT_ID="your-r2-account-id"
# R2_ACCESS_KEY_ID="your-r2-access-key"
# R2_SECRET_ACCESS_KEY="your-r2-secret-key"
